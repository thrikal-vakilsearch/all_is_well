%section#login
  .container
    .row
      .col-xs-12
        .form-wrap
          %h1 Log in with your email account
          = render 'layouts/message'
          %form#login-form{controller: 'login', :action => "/login", :method => "post", :autocomplete => "off", :role => "form"}
            .form-group
              %label.sr-only{:for => "email"} Email
              %input#email.form-control{:name => "email", :placeholder => "somebody@example.com", :type => "email"}/
            .form-group
              %label.sr-only{:for => "password"} Password
              %input#key.form-control{:name => "password", :placeholder => "Password", :type => "password"}/
            .checkbox
              %span.character-checkbox{:onclick => "showPassword()"}
              %span.label Show password
            %input#btn-login.btn.btn-custom.btn-lg.btn-block{:type => "submit", :value => "Log in"}/
          %a.forget{"data-target" => ".forget-modal", "data-toggle" => "modal", :href => "javascript:;"} Forgot your password?
          %hr/
      / /.col-xs-12
    / /.row
  / /.container
.modal.fade.forget-modal{"aria-hidden" => "true", "aria-labelledby" => "myForgetModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4.modal-title Recovery password
      .modal-body
        %p Type your email account
        %input#recovery-email.form-control{:autocomplete => "off", :name => "recovery-email", :type => "email"}/
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
        %button.btn.btn-custom{:type => "button"} Recovery
    / /.modal-content
  / /.modal-dialog
/ /.modal
